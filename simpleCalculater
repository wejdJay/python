first_number= eval(input("Enter first number: "))
second_number= eval(input("Enter second number: "))
operation=str(input("choose operation: + , - , * , / , %:  "))
if (operation == "+"):
    print(first_number + second_number)
elif(operation == "-"):
    print(first_number - second_number)
elif(operation == "*"):
    print(first_number * second_number)
elif (operation == "/"):
    if(second_number==0):
        print("You cant devide by zero")
    else:
     print(first_number / second_number)
elif (operation == "%"):
    print(first_number % second_number)
else:
    print("Sorry, enter a valid operation.")
